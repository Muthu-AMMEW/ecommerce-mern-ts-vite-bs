    "@types/express": "^5.0.3",
    "@types/gridfs-stream": "^0.5.39",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.0.10",
    "@types/nodemailer": "^6.4.17",
    "@types/validator": "^13.15.2",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.9",
